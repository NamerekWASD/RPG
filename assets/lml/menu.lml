<?xml version="1.0"?>
<!DOCTYPE stack SYSTEM "dtd\lml.dtd">
<stack fillparent="true">
	<table id="buttonTable" onecolumn="true"
		   tablealign="bottomRight" defaultalign="bottomRight"
		   defaultfillx="true" defaultpad="8">
		<textbutton onchange="startGame">@play</textbutton>
		<textbutton onchange="goto:settings">@settings</textbutton>
		<textbutton onchange="showSureDialog">@exit</textbutton>
	</table>
</stack>